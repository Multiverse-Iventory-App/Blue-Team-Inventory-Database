<h1>Pallete</h1>

<div>
	<article class="card">
        <img class="item-img" src="../public/images/pallete.jpg"/>
			<h3>Warehouse ID: <span id="warehouse-id">{{pallete.WarehouseId}}</span></h3>
			<h3>Max Box Capacity: <span id="max-capacity">{{pallete.capacity}}</span></h3>
			<h3>Current Box Count: <span id="current-capacity">{{warehouse.Palletes.Boxes.length}}</span></h3>
			<h3>Available Box Capacity: <span id="available-capacity"></span></h3>
            <br>
	</article>
	<div class='button-list'>
		<button id="delete-btn">Delete Pallete</button>
		<button><a class="palletes-button" href="/new-box/{{pallete.id}}">Add New Box!</a></button>
		<button><a class="palletes-button" href="/warehouses/{{pallete.WarehouseId}}">Go Back to Palletes List</a></button>
	</div>
	<br>
	<br>
</div>

<h2>Current Boxes</h2>
{{#each pallete.Boxes}} 
                <article class="card grid-container">
				<div class="grid-item">
			        <h3>Contents Name: {{item_name}}</h3>
                    <h3>Content Quantity: {{content_QTY}}</h3>
                    {{!-- <button id ="view-box"><a href="//{{id}}">View Pallete</a></button> --}}
				</div>
		        </article>
          
{{/each}}

	 

<script src="/pallete.js"></script>